<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/carros.css">
</head>
<body>
    <div class="content">
        <div class="alinha">
            <div class="hr">
                <h1>Cadastro de Carros</h1>
                <hr>
            </div>
            <form action="/cadastros/carros" name="carros" method="POST">
                <label for="nomeCarro">Nome do carro</label>
                <input type="text" name="carro" id="carro" placeholder="Digite o nome do veículo para cadastrar" required="required" />
                <label for="placaCarro">Placa do carro</label>
                <input type="text" name="placa" id="placa" placeholder="Digite a placa do veículo" required="required" />
                <label for="cambioCarro">Câmbio</label>
                <input type="text" name="cambio" id="cambio" placeholder="Manual ou Automático" required="required" />
                <label for="anoCarro">Ano do carro</label>
                <input type="text" name="ano" id="ano" placeholder="Digite o ano do veículo" required="required" />
                <label for="kmCarro">Quilometragem</label>
                <input type="text" name="km" id="km" placeholder="Digite a quilometragem do veículo" required="required" />
                <label for="motorCarro">Motor</label>
                <input type="text" name="motor" id="motor" placeholder="Qual a potencia do motor" required="required" />
                <label for="marcaCarro">Marca</label>
                <!--<input type="text" name="motor" id="motor" placeholder="Mudar para lista de marcas que vem do DB" required="required" />-->
                <select name="nomeDaMarca" id="">
                    <option value="marcaDB">Tem que vir do banco de dados</option>
                </select>
                <label for="corCarro">Cor</label>
                <!--<input type="text" name="motor" id="motor" placeholder="Mudar para lista de cores que vem do DB" required="required" />-->
                <select name="nomeDaCor" id="">
                    <option value="corDB">Tem que vir do banco de dados</option>
                </select>

                <label for="opcionalCarro">Opcionais</label>
                <!--<input type="text" name="motor" id="motor" placeholder="Mudar para lista de opcionais que vem do DB" required="required" />-->
                <input class="checkbox" type="checkbox" name="opcional" value="">
                
                <label for="descricaoCarro">Descrição</label>
                <textarea name="descricao" id="descricao" cols="30" rows="10"></textarea>
                <div>
                    <button type="submit">Cadastrar</button>
                    <button type="reset"><a href="http://localhost:3000/cadastros">Cancelar</a></button>
                </div>
            </form>
        </div>
    </div>
</body>
